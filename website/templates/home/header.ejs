
<body aria-busy="true">
<!-- Main navigation -->
    <header>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top scrolling-navbar">
        <div class="container">
            <div>
                <!-- Social Icon  -->
                <ul class="navbar-nav nav-flex-icons">
                    <li class="nav-item">
                        <a class="nav-link waves-effect waves-light" href="https://www.linkedin.com/in/liron-revah-0b2553194/">
                            <i class="fab fa-linkedin light-green-text-2"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link waves-effect waves-light" href="https://twitter.com/liron_revah">
                            <i class="fab fa-twitter light-green-text-2"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link waves-effect waves-light" href="https://github.com/liron7722">
                            <i class="fab fa-github light-green-text-2"></i>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- Navbar -->
    <!-- Full Page Intro -->
    <div id="home_bg" class="view">
        <!-- Mask & flexbox options-->
        <div class="mask d-flex justify-content-center align-items-center">
            <!-- Content -->
            <div class="container px-md-3 px-sm-0 ">
                <!--Grid row-->
                <div class="row text-center ">
                    <!-- Cards -->
                    <% cards.forEach((card) => {%>
                    <div class="card">
                        <div class="bg-image hover-overlay ripple" data-mdb-ripple-color="light">
                            <img class="img-fluid " src=<%= card.img %> />
                            <a href=<%= card.link %>>
                                <div class="mask"></div>
                            </a>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title"><%= card.title %></h5>
                            <p class="card-text" style="color: darkblue"><%= card.description %></p>
                            <a class="btn btn-primary" href=<%= card.link %> >Read More...</a>
                        </div>
                    </div>
                    <% }); %>
                </div>
                <!--Grid row-->
            </div>
            <!-- Content -->
        </div>
        <!-- Mask & flexbox options-->
    </div>
</header>
