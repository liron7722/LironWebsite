<!--Section: upcoming-->
<section id="upcoming" class="text-center py-5 wow fadeIn">
    <!-- Container -->
    <div class="container">
        <!-- Section heading -->
        <h2 class="h1-responsive font-weight-bold mb-5">Upcoming Projects</h2>
        <!-- Section description -->
        <p class="grey-text w-responsive mx-auto mb-5">Projects I am currently working on.</p>
        <!-- Grid row -->
        <div class="row text-center">
            <% upcoming.forEach((project) => {%>
                <!-- Grid column -->
                <div class="col-lg-4 col-md-12 mb-lg-0 mb-4">
                    <!--Featured image-->
                    <div class="view overlay rounded z-depth-1">
                        <img src=<%= project.img %> class="img-fluid" loading="lazy" alt="Sample project image">
                        <a>
                            <div class="mask rgba-white-slight waves-effect waves-light"></div>
                        </a>
                    </div>
                    <!--Excerpt-->
                    <div class="card-body pb-0">
                        <h4 class="font-weight-bold my-3"><%= project.name %></h4>
                        <p class="grey-text"><%= project.description %></p>
                        <a class="btn btn-purple btn-sm waves-effect waves-light"><i class="fa fa-clone left"></i> Coming soon...</a>
                    </div>
                </div>
                <!-- Grid column -->
            <% }); %>
        </div>
        <!-- Grid row -->
    </div>
    <!-- Container -->
</section>
<!--Section: upcoming-->

