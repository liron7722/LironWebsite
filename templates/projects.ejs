<!--Section: projects-->
<section id="projects" class="text-center py-5 wow fadeIn" style="background-color: #eee;">
    <!-- Container -->
    <div class="container">
        <!-- Section heading -->
        <h2 class="h1-responsive font-weight-bold mb-5">My Projects</h2>
        <!-- Section description -->
        <p class="grey-text w-responsive mx-auto mb-5">This is some of my projects, I hope you will like them.</p>
        <!-- Grid row -->
        <div class="row text-center">

            <% for(var i = 0; i < projects.length; i++) {%>
                <!-- Grid column -->
                <div class="col-lg-4 col-md-12 mb-lg-0 mb-4">
                    <!--Featured image-->
                    <div class="view overlay rounded z-depth-1">
                        <img src=<%= projects[i].img %> class="img-fluid" alt="Sample project image">
                        <a>
                            <div class="mask rgba-white-slight waves-effect waves-light"></div>
                        </a>
                    </div>
                    <!--Excerpt-->
                    <div class="card-body pb-0">
                        <h4 class="font-weight-bold my-3"><%= projects[i].title %></h4>
                        <p class="grey-text"><%= projects[i].description %></p>
                        <a class="btn btn-purple btn-sm waves-effect waves-light"
                           href=<%= projects[i].link %>><i class="fa fa-clone left"></i> View project</a>
                    </div>
                </div>
                <!-- Grid column -->
            <% } %>
        </div>
        <!-- Grid row -->
    </div>
    <!-- Container -->
</section>
<!--Section: projects-->


